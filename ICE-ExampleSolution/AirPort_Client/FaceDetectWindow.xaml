<Window x:Class="AirPort_Client.FaceDetectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AirPort_Client"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="人脸检测"
        Width="600"
        Height="400"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="Button_Click" Content="选择图片" />
            <Label Content="阈值：" />
            <TextBox Name="txtThrold" Text="0.86" />
            <Button Click="Button_Click_1" Content="检测" />
        </StackPanel>

        <Image Name="faceImaeg"
               Grid.Row="1"
               Stretch="Uniform" />
        <StackPanel Grid.Row="2">
            <Label Content="人脸数量：" />
            <Label Content="检测耗时：" />
        </StackPanel>
    </Grid>
</Window>
